                <center>
                    <div class="form-container" style="max-width: 500px;">
                        <form method="POST" action="update_topic/update-question">
                            <h2 class="text-center"><strong>Update question</strong></h2>
                            <input style="display: none;" name="id_lesson" value="{{ques.id_lesson}}" />
                            <input style="display: none;" name="id" value="{{ques.id}}" />
                            <label style="float: left;">Question</label>
                            <div class="mb-3"><textarea class="form-control" name="question" placeholder="Question"
                                    rows="3">{{ques.question}}</textarea></div>
                            <label style="float: left;">Answer A</label>
                            <div class="mb-3"><textarea class="form-control" name="aA" placeholder="A:"
                                    rows="2">{{ques.anA}}</textarea></div>
                            <label style="float: left;">Answer B</label>
                            <div class="mb-3"><textarea class="form-control" name="aB" placeholder="B:"
                                    rows="2">{{ques.anB}}</textarea></div>
                            <label style="float: left;">Answer C</label>
                            <div class="mb-3"><textarea class="form-control" name="aC" placeholder="C:"
                                    rows="2">{{ques.anC}}</textarea></div>
                            <label style="float: left;">Answer D</label>
                            <div class="mb-3"><textarea class="form-control" name="aD" placeholder="D:"
                                    rows="2">{{ques.anD}}</textarea></div>
                            <label style="float: left;">Correct Answer</label>
                            <div class="mb-3"><textarea class="form-control" name="correct" placeholder="Correct answer"
                                    rows="1" style="text-transform: uppercase; max-lines: 1;"
                                    maxlength="1">{{ques.correct}}</textarea></div>
                            <div class="mb-3"><button class="btn btn-primary d-block w-100"
                                    type="submit">Update</button></div>
                        </form>
                    </div>
                </center>
